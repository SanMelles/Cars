@model Cars.Core.Models.Cars.CarDeleteViewModel

<h1>Delete Car</h1>
<h3>Are you sure you want to delete this car?</h3>

<dl class="row">
    <dt class="col-sm-2">Brand</dt>
    <dd class="col-sm-10">@Model.Brand</dd>

    <dt class="col-sm-2">Model</dt>
    <dd class="col-sm-10">@Model.Model</dd>

    <dt class="col-sm-2">Year</dt>
    <dd class="col-sm-10">@Model.Year</dd>

    <dt class="col-sm-2">Engine Power</dt>
    <dd class="col-sm-10">@Model.EnginePower KW</dd>
</dl>

<form asp-action="DeleteConfirmation" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
