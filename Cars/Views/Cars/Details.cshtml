@model Cars.Core.Dto.CarDto

<h1>Car Details</h1>

<dl class="row">
    <dt class="col-sm-2">Brand</dt>
    <dd class="col-sm-10">@Model.Brand</dd>

    <dt class="col-sm-2">Model</dt>
    <dd class="col-sm-10">@Model.Model</dd>

    <dt class="col-sm-2">Year</dt>
    <dd class="col-sm-10">@Model.Year</dd>

    <dt class="col-sm-2">Engine Power</dt>
    <dd class="col-sm-10">@Model.EnginePower KW</dd>

	<dt class="col-sm-2">Created At</dt>
	<dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

	<dt class="col-sm-2">Modified At</dt>
	<dd class="col-sm-10">@Model.ModifiedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
<a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>
